{% block body %}
    <form method="POST" name="{{ book.slug }}/edit" id="edit">
        <div>
            <label>
                <input value="{{ book.title }}" type="text" name="title" placeholder="title" autocomplete="off"/>
            </label>
        </div>
        <div>
            <label>
                <input value="{{ book.author }}" type="text" name="author" placeholder="author" autocomplete="off"/>
            </label>
        </div>
        <div>
            <label>
                <select name="type">
                    <option>â€”Typeâ€”</option>
                    {% for type in types %}
                        <option value="{{ type }}" {{ book.type == type ? 'selected' : '' }} autocomplete="off"> {{ type }} </option>
                    {% endfor %}
                </select>
            </label>
        </div>
        <div>
            <label>
                <select name="note">
                    <option>{{notes[book.note_id]}}</option>
                    {% for key, note in notes %}
                        <option value="{{ key }}" {{ book.note_id == key ? 'selected' : '' }} autocomplete="off">{{ key }} - {{ note }} </option>
                    {% endfor %}
                </select>
            </label>
        </div>
        <div>
            <label>
                <input value="{{ book.finished_at|date('Y-m-d')  }}" type="date" name="date" placeholder="date"/>
            </label>
        </div>
        <div>
            <label>
                <textarea name="summary" cols="30" rows="20">{{ book.summary }}</textarea>
            </label>
        </div>
        <div>
            <button type="submit">OK</button>
        </div>
        <div>
            <button class="delete"><a href="{{ book.slug }}/delete">Delete</a></button>
        </div>
    </form>
{% endblock %}
